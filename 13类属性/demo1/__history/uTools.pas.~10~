unit uTools;

interface
{声明区域}

uses
  Unit1;

var
  Name: string;

type
  TPerson = class
      {字段、域}
  private
    FName: string;
    FAge: Integer;
    //声明一个函数，用于获取字段的值
    function GerAge(): Integer;
  public
    {属性}
    property Name: string read FName write FName;
  end;

implementation
{实现区域}

var
  Age: Integer;

{ TPerson }

function TPerson.GerAge: Integer;
begin
  Result := Self.FAge;
end;

initialization
{初始化区域}
  Name := '许嵩';
  Age := 18;

finalization
{销毁区域}
  Name := '';
  Age := 0;

end.

